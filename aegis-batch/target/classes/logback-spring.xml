<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Formato Human Readable para Dev/Local -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [CorrId:%X{correlationId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Opcional: Appender JSON para Produção (comentado para simplicidade local) -->
    <!-- Se precisar de JSON logs reais, descomente e adicione logstash-logback-encoder no pom -->

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
